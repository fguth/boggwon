    <h1>
      bet the amount you want.<br>
      luck decides who wins.
    </h1>

    <span class="arrow">&nbsp;</span>

    <div class="raffle">

      <ul class="raffle-detail">
        <li class="lefted" data-code="997dwa7987d98wa7987d9w79329872332d">
          <div class="closed">
            <div class="date box">
              <p>date</p>
              <h2>aug, 17</h2>
            </div>
            <div class="prize box">
              <p>prize</p>
              <h2>$ 9,702.15</h2>
            </div>
            <div class="winner box">
              <p>winner</p>
              <h2>fguth08</h2>
            </div>
          </div>
        </li>

        <li class="centered" data-code="99bc5a1cca84b99efe6be90c249545b7">
          <div class="opened">
            <div class="date box">
              <p>prize</p>
              <h2>9.23 BTC</h2>
            </div>
            <div class="bet">
              <div class="caller">
                <h3>fill in an amount.</h3>
                <p>the higher your bet, the higher your chances.</p>
              </div>
              <div class="amount">
                <a class="coinbase-button" data-code="99bc5a1cca84b99efe6be90c249545b7" data-button-style="custom_large" data-custom="RAFFLE1" href="https://coinbase.com/checkouts/99bc5a1cca84b99efe6be90c249545b7">Pay With Bitcoin</a>
              </div>
            </div>
            <div class="prize box">
              <p>remaining</p>
              <h2>4h 29m 11s</h2>
            </div>
          </div>
        </li>

        <li class="righted">
          <div class="closed">
            <div class="date box">
              <p>date</p>
              <h2>sep, 27</h2>
            </div>
            <div class="prize box">
              <p>prize</p>
              <h2>-</h2>
            </div>
            <div class="winner box">
              <p>winner</p>
              <h2>-</h2>
            </div>
          </div>
        </li>
      </ul>

      <div class="raffle-number">
        <ul>
          <li>bogg #1</li>
          <li class="selected">bogg #2</li>
          <li>bogg #3</li>
        </ul>
      </div>

      <a href="" class="raffle-control left">&nbsp;</a>
      <a href="" class="raffle-control right">&nbsp;</a>

      <span class="raffle-shadow left">&nbsp;</span>
      <span class="raffle-shadow right">&nbsp;</span>

    </div>

    <div class="transactions">
      <script id="transactions" type="text/x-handlebars-template">
        {{#if error}}
          <p>{{error}}</p>
        {{else}}
          <ul>
            {{#each orders}}
              <li>
                {{order.id}}<br>
                {{order.transaction.sender.name}}<br>
                {{order.total_native.currency_iso}} {{order.total_native.floated}}</li>
            {{/each}}
          </ul>
        {{/if}}
      </script>
    </div>

</section>